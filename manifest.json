{
  "manifest_version": 2,
  "name": "Screen Time",
  "version": "1.0.0",

  "description": "A screen time tracker for social media web apps.",
  "icons": {
    "16": "images/screen_time16.png",
    "32": "images/screen_time32.png",
    "48": "images/screen_time48.png",
    "128": "images/screen_time128.png"
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/screen_time16.png",
      "32": "images/screen_time32.png",
      "48": "images/screen_time48.png",
      "128": "images/screen_time128.png"
    }
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["storage", "tabs"]
}
